<div class="row justify-content-center">

	<div class="col-md-5">
		<div class="card">

			<div class="card-body">

				<h1><%= t('devise.login.title') %></h1>

				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

					<div class="form-group">
						<%= f.label :email, t('devise.email.title') %>
						<%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: t('devise.email.placeholder') %>
					</div>

					<div class="form-group">
						<%= f.label :password, t('devise.password.title') %>
						<%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: t('devise.password.title') %>
					</div>

					<% if devise_mapping.rememberable? %>
						<div class="field">
						<%= f.check_box :remember_me %>
						<%= f.label :remember_me ,  t('devise.login.remember_me') %>
						</div>
					<% end %>

					<div class="actions">
						<%= f.submit  t('devise.login.submit'), class: "btn btn-lg btn-primary btn-block" %>
					</div>

				<% end %>

				<%= render "devise/shared/links" %>

			</div>
		</div>
	</div>
</div>
