<div class="row justify-content-center">

	<div class="col-md-5">
		<div class="card">

			<div class="card-body">

				<section>

					<h1><%= t('devise.reset_password.title') %></h1>

					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= render "devise/shared/error_messages", resource: resource %>

					<div class="form-group">
						<%= f.label :email , t('devise.email.title') %>
						<%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: t('devise.email.title') %>
					</div>


					<div class="actions mt-5">
						<%= f.submit  t('devise.reset_password.submit') , class: "btn btn-lg btn-primary btn-block" %>
					</div>
					<% end %>

					<%= render "devise/shared/links" %>

				</section>

			</div>
		</div>
	</div>
</div>




