<div class="row justify-content-center">

	<div class="col-md-5">
		<div class="card">

			<div class="card-body">

				<section>

					<h2 class="mb-5">Forgot your password?</h2>


					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= render "devise/shared/error_messages", resource: resource %>

					<div class="form-group">
						<%= f.label :email %>
						<%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "Enter email" %>
					</div>


					<div class="actions mt-5">
						<%= f.submit "Send me reset password instructions" , class: "btn btn-lg btn-primary btn-block" %>
					</div>
					<% end %>

					<%= render "devise/shared/links" %>

				</section>

			</div>
		</div>
	</div>
</div>




