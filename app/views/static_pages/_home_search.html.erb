<!-- Start Search Section -->
<section>
	<div class="home-search">
		<div class="container-fluid">
			<div class="container">

				<div class="row">
					<div class="col-md-10">

						<h2 class="display-3 font-weight-normal"><%= t('home.search.heading') %></h2>

						<p class="lead font-weight-normal py-5"><%= t('home.search.blurb') %></p>


						<!-- TODO: Make the buttons block in small view -->
						<form>
							<div class="form-row align-items-center">
								<div class="col-6">
									<input type="text" class="form-control form-control-lg" placeholder="<%= t('home.search.placeholder') %>">
								</div>

								<div class="col-3 my-1">
								<!-- <label class="mr-sm-2" for="inlineFormCustomSelect">SDGs:</label> -->
								<select class="custom-select custom-select-lg form-control mr-sm-2" id="inlineFormCustomSelect">
									<option value="0" selected>All SDGs...</option>
									<% SustainableDevelopmentGoal.all.each do |sdg| %>
										<option value="<%= sdg.id %>"><%= sdg.banner_en %> (<%= sdg.code %>)</option>
									<% end %>
								</select>





								<% if I18n.locale == :en %>



									<% collection_select(:profile, :profile_id, SustainableDevelopmentGoal.all, :id, :title_en, { :multiple => false } , {:class=>'custom-select custom-select-lg form-control mr-sm-2'}) %>
								<% elsif I18n.locale == :fr %>
									<% collection_select(:profile, :profile_id, SustainableDevelopmentGoal.all, :id, :title_fr, { :multiple => false } , {:class=>'custom-select custom-select-lg form-control mr-sm-2'}) %>
								<% end %>

								</div>
								<div class="col-3">
									<button type="submit" class="btn btn-lg btn-success mb-2 btn-block">Search</button>
								</div>
							</div>
						</form>

					</div>
				</div>

			</div>
		</div>
	</div>
</section>
<!-- End Search Section -->
