	<header role="banner">
		<div class="container">
			<nav class="ng-navbar">
				<a class="ng-navbar-brand" href="#">
					<img src="<%= asset_path('brand/nextgen-database-logo.jpg') %>" width="40" class="d-inline-block align-middle" alt="" />
					<%= t('application.title') %>
				</a>
				<div class="ng-navbar-links-container open">

					<ul class="ng-navbar-links-list">
						<%#
							Header navigation links that are hidden
							in desktop but available in mobile

							Home
							About
							Terms and Conditions
							Privacy

							--
							Sign In
							Register
							--

							French
						%>
						<li class="link-hide">
							<%= link_to( t('navigation.links.home'), home_path ) %>
