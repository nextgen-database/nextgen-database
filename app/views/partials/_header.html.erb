						</li>
						<li class="link-hide">
							<%= link_to( t('navigation.links.tc'), about_path ) %>
						</li>
						<li class="link-hide">
							<%= link_to( t('navigation.links.privacy'), about_path ) %>
						</li>

						<% if user_signed_in? %>
						<%#
							TO DO: Add a button to the my profile page (when it's created)
						%>
