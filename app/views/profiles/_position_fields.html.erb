<div class="nested-fields">

	<div class="card-style-1">


		<div class="form-group">

			<%= label_tag(:title_id , "Position Title:") %>

			<% if I18n.locale == :en %>
				<%= f.collection_select :title_id, Title.order(:english).all ,:id, :english, {}, { multiple: false, class: "form-control" } %>
			<% elsif I18n.locale == :fr %>
				<%= f.collection_select :title_id, Title.order(:french).all ,:id, :french, {}, { multiple: false, class: "form-control" } %>
			<% end %>

		</div>


		<p class="text-muted pb-1 mb-1">The following items are optional:</p>


		<div class="form-row">

			<div class="form-group col-lg-6">

				<%= label_tag(:department_en, "Department Name (English):") %>
				<%= f.text_field :department_en, class: 'form-control', placeholder: "Name of Department in English" %>

			</div>

			<div class="form-group col-lg-6">

				<%= label_tag(:department_fr, "Department Name (French):") %>
				<%= f.text_field :department_en, class: 'form-control', placeholder: "Name of Department in French" %>

			</div>

		</div>

		<div class="form-row">

			<div class="form-group col-lg-6">

				<%= label_tag(:faculty_en, "Faculty Name (English):") %>
				<%= f.text_field :faculty_en, class: 'form-control', placeholder: "Faculty Name in French" %>

			</div>

			<div class="form-group col-lg-6">

				<%= label_tag(:faculty_fr, "Faculty Name (French):") %>
				<%= f.text_field :faculty_fr, class: 'form-control', placeholder: "Faculty Name in French" %>

			</div>

		</div>

		<%= link_to_remove_association "Remove position", f , class: "btn btn-outline-secondary" %>

	</div>

</div>
