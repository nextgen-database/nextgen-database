<h1>Admin::Position Titles#index</h1>

<%#
    Link to create a new Position Title
#%>

<%= link_to 'New', new_admin_title_path(), { :class=>"btn btn-primary" } %>


<%#
    Loop through all of the Titles (position titles)

	TO DO: Sort the data
#%>
<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">English</th>
			<th scope="col">French</th>
			<th scope="col">Actions</th>
	<thead>
	<tbody>
		<% @titles.each_with_index do |title,index| %>
			<tr>
				<td><%= index + 1 %></td>
				<td><%= title.english %></td>
				<td><%= title.french %></td>
				<td>
					Actions To Do

					<%#= link_to 'edit', edit_resource_path(sector) %>

					<%= link_to 'Edit', edit_admin_organisation_path(title) %>

					<%= link_to 'Delete', admin_organisation_path(title), method: :delete, data: {confirm: "Are you sure?"} %></td>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
