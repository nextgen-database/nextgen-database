<h1>Manage Position Titles</h1>

<%#
    Link to create a new Position Title
#%>
<div class="d-flex flex-row-reverse">
	<%= link_to 'New Position', new_admin_title_path(), { :class=>"btn btn-primary my-3" } %>
</div>

<%#
    Loop through all of the Titles (position titles)

	TO DO: Sort the data
#%>
<div class="bg-white p-4 mt-3 mb-5" style="border-radius: 15px">

	<div class="table-responsive">

		<table class="table" id="admin-dashboard-vocab-position-titles-management">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">English</th>
					<th scope="col">French</th>
					<th scope="col">Actions</th>
			<thead>
			<tbody>
				<% @titles.each_with_index do |title,index| %>
					<tr>
						<td><%= index + 1 %></td>
						<td><%= title.english %></td>
						<td><%= title.french %></td>
						<td>

							<%#= link_to 'edit', edit_resource_path(sector) %>

							<%= link_to 'Edit', edit_admin_organisation_path(title) %>

							<%#= link_to 'Delete', admin_organisation_path(title), method: :delete, data: {confirm: "Are you sure?"} %></td>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

	</div>

</div>