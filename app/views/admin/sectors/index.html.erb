<h1>Admin::Sectors#index</h1>

<%#
    Loop through all of the sectors
#%>

<%= link_to 'New', new_admin_sector_path(), { :class=>"btn btn-primary" } %>

<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">English</th>
			<th scope="col">French</th>
			<th scope="col">Actions</th>
	<thead>
	<tbody>
		<% @sectors.each_with_index do |sector,index| %>
			<tr>
				<td><%= index + 1 %></td>
				<td><%= sector.english %></td>
				<td><%= sector.french %></td>
				<td>
					Actions To Do

					<%#= link_to 'edit', edit_resource_path(sector) %>

					<%= link_to 'Edit', edit_admin_sector_path(sector) %>

					<%= link_to 'Delete', admin_sector_path(sector), method: :delete, data: {confirm: "Are you sure?"} %></td>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
